<Window x:Class="SportStoreMVVM.Views.AddUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SportStoreMVVM.Views"
        mc:Ignorable="d"
        Title="Добавление пользователя" Height="300" Width="300">
    <Grid>

        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center">

            <TextBlock Text="Имя"/>
            <TextBox Height="20" Width="100"
                     Text="{Binding CurrentUser.Name}"/>

            <TextBlock Text="Возраст" />
            <TextBox Height="20" Width="100"
                     Text="{Binding CurrentUser.Age}"/>

            <Button Height="20" Margin="0 10 0 0"
                    Content="Сохранить"
                    Background="Green"
                    Foreground="White"
                    Command="{Binding SaveUserCommand}"
                    CommandParameter="{Binding CurrentUser}"
                    />


        </StackPanel>

    </Grid>
</Window>
